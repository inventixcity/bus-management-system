<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.busmanagementsystem.PaymentScreenController"
      spacing="10" alignment="CENTER" style="-fx-background-color: #f0f0f0; -fx-padding: 20;">
    <Label text="Payment Details" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    <TextField fx:id="cardNumberField" promptText="Card Number"/>
    <TextField fx:id="expiryDateField" promptText="Expiry Date (MM/YY)"/>
    <TextField fx:id="cvvField" promptText="CVV"/>
    <Label fx:id="totalAmountLabel" text="Total Amount: $0.00"/>
    <Button text="Make Payment" onAction="#handleMakePayment"/>
</VBox>