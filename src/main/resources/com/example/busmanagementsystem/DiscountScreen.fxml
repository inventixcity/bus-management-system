<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.busmanagementsystem.DiscountScreenController"
      spacing="10" alignment="CENTER" style="-fx-background-color: #f0f0f0; -fx-padding: 20;">
    <Label text="Apply Discount Code" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    <TextField fx:id="discountCodeField" promptText="Enter discount code"/>
    <Button text="Apply Discount" onAction="#handleApplyDiscount"/>
    <Button text="Skip" onAction="#handleSkip"/>
</VBox>